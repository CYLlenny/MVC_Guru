    <script>
        $('#search-1').on("click", function () {
            $('#search-1').hide();
            $('.main-menu-center').hide();
            $('#search-input').show();
            $('.main-menu-right').css('width', '1200')
        });

    $('#cancel-search').on("click", function () {
            $('#search-input').hide();
            $('.main-menu-center').show();
            $('#search-1').show();
            $('.main-menu-right').width(300);
        });

        $(document).on('keypress',function(e) {
            if (e.which == 13) {
                $('#do-search').click();
        }
        });

